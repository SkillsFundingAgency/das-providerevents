<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="info" internalLogFile="internal-nlog.txt">

  <extensions>
    <add assembly="SFA.DAS.NLog.Targets.Redis"/>
  </extensions>

  <targets>
    <target xsi:type="Redis" name="Redis" connectionStringName="LoggingRedisConnectionString" environmentKeyName="EnvironmentName" appName="das-providerevents-api" includeAllProperties="true" layout="${message}"></target>
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="Redis" />
  </rules>
</nlog>