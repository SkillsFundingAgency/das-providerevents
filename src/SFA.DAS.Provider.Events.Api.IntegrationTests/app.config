<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog, Version=4.0.0.0, Culture=neutral, PublicKeyToken=5120e14c03d0593c" />
  </configSections>
  <connectionStrings>
    <add name="default" connectionString="Server=.;Database=ProviderEventsAT;Trusted_Connection=True;" />
  </connectionStrings>
  <appSettings>
    <add key="LogLevel" value="Debug" />
    <add key="EnvironmentName" value="LOCAL" />
    <add key="LoggingConnectionString" value="server=.;database=ProviderEventsAT;trusted_connection=true;" />
    <add key="MonthEndConnectionString" value="server=.;database=ProviderEventsAT;trusted_connection=true;" />
    <add key="EventsConnectionString" value="server=.;database=ProviderEventsAT;trusted_connection=true;" />
    <add key="LoggingRedisConnectionString" value="" />
    <add key="LoggingRedisKey" value="" />
    <add key="ApiTokenSecret" value="dodge duck dip dive dodge" />
    <add key="ApiIssuer" value="http://localhost:57968/" />
    <add key="ApiAudiences" value="http://localhost" />
    <add key="ConfigurationStorageConnectionString" value="UseDevelopmentServer=true" />
  </appSettings>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd" autoReload="true" throwExceptions="false" internalLogLevel="Debug" internalLogFile="c:\temp\nlog-internal.${appName}.log">
    <extensions>
      <add assembly="SFA.DAS.NLog.Targets.Redis" />
    </extensions>

    <variable name="appName" value="das-providerevents-api" />

    <targets>
      <target xsi:type="Database" name="Db">
        <commandText>
          INSERT INTO EventApi.Logs
          (LogDateTime, LogLevel, Message, Logger, CallSite, Exception, ActivityId)
          VALUES
          (@time, @level, @message, @logger, @callSite, @exception, @activityid)
        </commandText>

        <parameter name="@time" layout="${date}" />
        <parameter name="@level" layout="${level}" />
        <parameter name="@message" layout="${message}" />

        <parameter name="@logger" layout="${logger}" />
        <parameter name="@callSite" layout="${callsite}" />
        <parameter name="@exception" layout="${exception:tostring}" />

        <parameter name="@activityid" layout="${activityid}" />
      </target>
      <target type="Redis" name="RedisLog" appName="${appName}" environmentKey="EnvironmentName" connectionStringKey="LoggingRedisConnectionString" includeAllProperties="true" keySettingsKey="LoggingRedisKey" layout="${message}" />
    </targets>

    <rules>
      <logger name="*" minlevel="Debug" writeTo="Db" />
    </rules>
  </nlog>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Moq" publicKeyToken="69f491c39445e920" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.7.142.0" newVersion="4.7.142.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="nunit.framework" publicKeyToken="2638cd05610744eb" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.8.1.0" newVersion="3.8.1.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-11.0.0.0" newVersion="11.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.1.0.0" newVersion="3.1.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.IdentityModel.Tokens.Jwt" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.20622.1351" newVersion="4.0.20622.1351" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.ApplicationInsights" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.4.0.0" newVersion="2.4.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.2" />
  </startup>
</configuration>
